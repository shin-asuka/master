<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TeacherModuleMapper">

	<sql id="teacherModuleColumns">teacher_module.id AS teacher_module_id, teacher_module.teacher_id AS
		teacher_module_teacher_id, teacher_module.module_name AS teacher_module_module_name</sql>

	<sql id="teacherModuleWhere">
		<trim prefix="WHERE" prefixOverrides="AND">
			<if test="id!=0">AND teacher_module.id = #{id}</if>
			<if test="teacherId!=0">AND teacher_module.teacher_id = #{teacherId}</if>
			<if test="moduleName!=null">AND teacher_module.module_name = #{moduleName}</if>
		</trim>
	</sql>

	<sql id="teacherModuleOrder">
		<if test="orderString!=null">ORDER BY ${orderString}</if>
	</sql>

	<sql id="teacherModuleLimit">LIMIT #{startLine},#{limitLine}</sql>

	<resultMap type="com.vipkid.trpm.entity.TeacherModule" id="teacherModuleResultMap">
		<id column="teacher_module_id" property="id" />
		<result column="teacher_module_teacher_id" property="teacherId" />
		<result column="teacher_module_module_name" property="moduleName" />
	</resultMap>

	<select id="findDao" resultMap="teacherModuleResultMap">
		SELECT
		<include refid="teacherModuleColumns" />
		FROM teacher_module
		<include refid="teacherModuleWhere" />
		<include refid="teacherModuleOrder" />
	</select>

	<select id="countDao" resultType="int">
		SELECT COUNT(*) FROM teacher_module
		<include refid="teacherModuleWhere" />
	</select>

	<select id="pageDao" resultMap="teacherModuleResultMap">
		SELECT
		<include refid="teacherModuleColumns" />
		FROM teacher_module
		<include refid="teacherModuleWhere" />
		<include refid="teacherModuleOrder" />
		<include refid="teacherModuleLimit" />
	</select>

	<select id="limitDao" resultMap="teacherModuleResultMap">
		SELECT
		<include refid="teacherModuleColumns" />
		FROM teacher_module
		<include refid="teacherModuleWhere" />
		<include refid="teacherModuleOrder" />
		<include refid="teacherModuleLimit" />
	</select>

	<insert id="saveDao" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO teacher_module
		<trim prefix="(" prefixOverrides=",">
			<if test="id!=0">,id</if>
			<if test="teacherId!=0">,teacher_id</if>
			<if test="moduleName!=null">,module_name</if>
		</trim>
		) VALUES
		<trim prefix="(" prefixOverrides=",">
			<if test="id!=0">,#{id}</if>
			<if test="teacherId!=0">,#{teacherId}</if>
			<if test="moduleName!=null">,#{moduleName}</if>
		</trim>
		)
	</insert>

	<update id="updateDao">
		UPDATE teacher_module
		<trim prefix="SET" prefixOverrides=",">
			<if test="id!=0">,id = #{id}</if>
			<if test="teacherId!=0">,teacher_id = #{teacherId}</if>
			<if test="moduleName!=null">,module_name = #{moduleName}</if>
		</trim>
		<trim prefix="WHERE" prefixOverrides="AND">AND id = #{id}</trim>
	</update>

	<delete id="deleteDao">
		DELETE FROM teacher_module
		<trim prefix="WHERE" prefixOverrides="AND">AND id = #{id}</trim>
	</delete>

</mapper>
