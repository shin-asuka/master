<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TagsMapper">

    <sql id="tagsColumns">tags.id AS id, tags.name AS name, tags.chinese_describe AS chinese_describe, tags.type AS type, tags.described AS described, tags.parent_id AS parent_id, tags.creater_id AS creater_id, tags.create_time AS create_time, tags.update_time AS update_time, tags.update_id AS update_id, tags.version AS version</sql>

    <sql id="tagsWhere">
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="id != 0">AND tags.id = #{id}</if>
            <if test="name != null">AND tags.name = #{name}</if>
            <if test="chineseDescribe != null">AND tags.chinese_describe = #{chineseDescribe}</if>
            <if test="type != 0">AND tags.type = #{type}</if>
            <if test="described != null">AND tags.described = #{described}</if>
            <if test="parentId != 0">AND tags.parent_id = #{parentId}</if>
            <if test="createrId != 0">AND tags.creater_id = #{createrId}</if>
            <if test="createTime != null">AND tags.create_time = #{createTime}</if>
            <if test="updateTime != null">AND tags.update_time = #{updateTime}</if>
            <if test="updateId != 0">AND tags.update_id = #{updateId}</if>
            <if test="version != 0">AND tags.version = #{version}</if>
        </trim>
    </sql>

    <sql id="tagsOrder">
        <if test="orderString != null">ORDER BY ${orderString}</if>
    </sql>

    <sql id="tagsLimit">LIMIT #{startLine}, #{limitLine}</sql>

    <resultMap type="com.vipkid.trpm.entity.Tags" id="tagsResultMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="chinese_describe" property="chineseDescribe"/>
        <result column="type" property="type"/>
        <result column="described" property="described"/>
        <result column="parent_id" property="parentId"/>
        <result column="creater_id" property="createrId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_id" property="updateId"/>
        <result column="version" property="version"/>
    </resultMap>

    <select id="findDao" resultMap="tagsResultMap">
        SELECT
        <include refid="tagsColumns"/>
        FROM tags
        <include refid="tagsWhere"/>
    </select>

    <select id="countDao" resultType="int">
        SELECT COUNT(*) FROM tags
        <include refid="tagsWhere"/>
    </select>

    <select id="pageDao" resultMap="tagsResultMap">
        SELECT
        <include refid="tagsColumns"/>
        FROM tags
        <include refid="tagsWhere"/>
        <include refid="tagsOrder"/>
        <include refid="tagsLimit"/>
    </select>

    <select id="limitDao" resultMap="tagsResultMap">
        SELECT
        <include refid="tagsColumns"/>
        FROM tags
        <include refid="tagsWhere"/>
        <include refid="tagsOrder"/>
        <include refid="tagsLimit"/>
    </select>

    <insert id="saveDao" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tags
        <trim prefix="(" prefixOverrides=",">
            <if test="id != 0">,id</if>
            <if test="name != null">,name</if>
            <if test="chineseDescribe != null">,chinese_describe</if>
            <if test="type != 0">,type</if>
            <if test="described != null">,described</if>
            <if test="parentId != 0">,parent_id</if>
            <if test="createrId != 0">,creater_id</if>
            <if test="createTime != null">,create_time</if>
            <if test="updateTime != null">,update_time</if>
            <if test="updateId != 0">,update_id</if>
            <if test="version != 0">,version</if>
        </trim>
        ) VALUES
        <trim prefix="(" prefixOverrides=",">
            <if test="id != 0">,#{id}</if>
            <if test="name != null">,#{name}</if>
            <if test="chineseDescribe != null">,#{chineseDescribe}</if>
            <if test="type != 0">,#{type}</if>
            <if test="described != null">,#{described}</if>
            <if test="parentId != 0">,#{parentId}</if>
            <if test="createrId != 0">,#{createrId}</if>
            <if test="createTime != null">,#{createTime}</if>
            <if test="updateTime != null">,#{updateTime}</if>
            <if test="updateId != 0">,#{updateId}</if>
            <if test="version != 0">,#{version}</if>
        </trim>
        )
    </insert>

    <update id="updateDao">
        UPDATE tags
        <trim prefix="SET" prefixOverrides=",">
            <if test="id != 0">,id = #{id}</if>
            <if test="name != null">,name = #{name}</if>
            <if test="chineseDescribe != null">,chinese_describe = #{chineseDescribe}</if>
            <if test="type != 0">,type = #{type}</if>
            <if test="described != null">,described = #{described}</if>
            <if test="parentId != 0">,parent_id = #{parentId}</if>
            <if test="createrId != 0">,creater_id = #{createrId}</if>
            <if test="createTime != null">,create_time = #{createTime}</if>
            <if test="updateTime != null">,update_time = #{updateTime}</if>
            <if test="updateId != 0">,update_id = #{updateId}</if>
            <if test="version != 0">,version = #{version}</if>
        </trim>
        <trim prefix="WHERE" prefixOverrides="AND">AND id = #{id}</trim>
    </update>

    <delete id="deleteDao">
        DELETE FROM tags
        <trim prefix="WHERE" prefixOverrides="AND">AND id = #{id}</trim>
    </delete>

</mapper>
