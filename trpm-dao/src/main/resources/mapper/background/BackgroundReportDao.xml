<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vipkid.trpm.dao.BackgroundReportDao">
    <resultMap id="BaseResultMap" type="com.vipkid.trpm.entity.BackgroundReport">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="report_id" jdbcType="VARCHAR" property="reportId" />
        <result column="screening_id" jdbcType="VARCHAR" property="screeningId" />
        <result column="bg_sterling_screening_id" jdbcType="INTEGER" property="bgSterlingScreeningId" />
        <result column="status" jdbcType="VARCHAR" property="status" />
        <result column="result" jdbcType="VARCHAR" property="result" />
        <result column="updated_at" jdbcType="DATE" property="updatedAt" />
        <result column="create_time" jdbcType="DATE" property="createTime" />
        <result column="update_time" jdbcType="DATE" property="updateTime" />
        <result column="type" jdbcType="LONGVARCHAR" property="type" />
    </resultMap>

    <sql id="bgReportAllcolumn">
        id,
        report_id,
        screening_id,
        bg_sterling_screening_id,
        STATUS,
        result,
        updated_at,
        create_time,
        update_time,
        type

    </sql>

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO bg_sterling_report (
        id,
        report_id,
        screening_id,
        bg_sterling_screening_id,
        STATUS,
        result,
        updated_at,
        create_time,
        update_time,
        type
        )
        VALUES
        <foreach collection="list" item="report" index="index" separator=",">
            (
            #{report.id,jdbcType=BIGINT},
            #{report.reportId,jdbcType=VARCHAR},
            #{report.screeningId,jdbcType=VARCHAR},
            #{report.bgSterlingScreeningId,jdbcType=INTEGER},
            #{report.status,jdbcType=VARCHAR},
            #{report.result,jdbcType=VARCHAR},
            #{report.updatedAt,jdbcType=DATE},
            #{report.createTime,jdbcType=DATE},
            #{report.updateTime,jdbcType=DATE},
            #{report.type,jdbcType=LONGVARCHAR}
            )

        </foreach>


    </insert>


    <select id="findByBgSterlingScreeningId" parameterType="Long" resultMap="BaseResultMap">
        SELECT
        <include refid="bgReportAllcolumn" />
        FROM
        bg_sterling_report r
        WHERE
        r.id = #{id}
    </select>
</mapper>