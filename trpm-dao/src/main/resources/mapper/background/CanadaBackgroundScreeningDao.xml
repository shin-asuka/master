<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vipkid.background.dao.CanadaBackgroundScreeningDao">
    <resultMap id="CanadaBackgroundScreening" type="com.vipkid.trpm.entity.CanadaBackgroundScreening">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="teacher_id" jdbcType="BIGINT" property="teacherId" />
        <result column="result" jdbcType="VARCHAR" property="result" />
        <result column="create_id" jdbcType="BIGINT" property="createId" />
        <result column="update_id" jdbcType="BIGINT" property="updateId" />
        <result column="create_time" jdbcType="DATE" property="createTime" />
        <result column="update_time" jdbcType="DATE" property="updateTime" />
    </resultMap>

    <sql id="canadaBackgroundScreeningAllColumn">
        c.id,
        c.teacher_id,
        c.result,
        c.create_id,
        c.update_id,
        c.create_time,
        c.update_time
    </sql>

    <select id = "findByTeacherId" resultMap="CanadaBackgroundScreening" parameterType="Long">
    SELECT
        <include refid="canadaBackgroundScreeningAllColumn"/>
      FROM bg_sterling_screening_ca c
      WHERE c.teacher_id = #{teacherId}
      ORDER BY id DESC LIMIT 1

    </select>
</mapper>