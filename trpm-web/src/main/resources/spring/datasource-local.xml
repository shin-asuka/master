<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:beans="http://www.springframework.org/schema/beans" xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

    <bean id="masterDataSource" class="com.alibaba.druid.pool.DruidDataSource" init-method="init"
          destroy-method="close">
        <property name="url" value="${master.jdbc.url}"/>
        <property name="connectionProperties"
                  value="useUnicode=true;characterEncoding=UTF-8;zeroDateTimeBehavior=convertToNull;connectTimeout=60000;socketTimeout=60000"/>
        <property name="username" value="${master.jdbc.username}"/>
        <property name="password" value="${master.jdbc.password}"/>
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="initialSize" value="10"/>
        <property name="minIdle" value="10"/>
        <property name="maxActive" value="100"/>
        <property name="maxWait" value="30000"/>
        <property name="removeAbandoned" value="true"/>
        <property name="removeAbandonedTimeoutMillis" value="7200000"/>
        <property name="timeBetweenEvictionRunsMillis" value="60000"/>
        <property name="minEvictableIdleTimeMillis" value="300000"/>
        <property name="validationQuery" value="SELECT 1"/>
        <property name="filters" value="stat,slf4j"/>
        <property name="connectionInitSqls" value="set names utf8mb4;"/>
    </bean>
    <bean id="slaveDataSource" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close">
        <property name="url" value="${slave.jdbc.url}"/>
        <property name="connectionProperties"
                  value="useUnicode=true;characterEncoding=UTF-8;zeroDateTimeBehavior=convertToNull;connectTimeout=180000;socketTimeout=180000"/>
        <property name="username" value="${slave.jdbc.username}"/>
        <property name="password" value="${slave.jdbc.password}"/>
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="initialSize" value="10"/>
        <property name="minIdle" value="10"/>
        <property name="maxActive" value="100"/>
        <property name="maxWait" value="30000"/>
        <property name="removeAbandoned" value="true"/>
        <property name="removeAbandonedTimeoutMillis" value="7200000"/>
        <property name="timeBetweenEvictionRunsMillis" value="60000"/>
        <property name="minEvictableIdleTimeMillis" value="300000"/>
        <property name="validationQuery" value="SELECT 1"/>
        <property name="filters" value="stat,slf4j"/>
        <property name="connectionInitSqls" value="set names utf8mb4;"/>
    </bean>

    <bean id="dataSource" class="com.vipkid.dataSource.TypedReadWriteDataSourceRouter">
        <!--<property name="slaves" value="5"/>-->
        <property name="slaves" value="1"/>
        <property name="targetDataSources">
            <map key-type="java.lang.String">
                <entry key="WRITE" value-ref="masterDataSource"/>
                <!-- slave占用80%的流量 -->
                <entry key="READ_0" value-ref="slaveDataSource"/>
            </map>
        </property>
        <property name="defaultTargetDataSource" ref="masterDataSource"/>
    </bean>

</beans>