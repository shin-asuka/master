<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
	    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">

	<bean id="announcementService" class="com.vipkid.http.service.AnnouncementHttpService">
        <property name="serverAddress" value="${announcement.serverAddress}"/>
    </bean>
    
    <bean id="assessmentHttpService" class="com.vipkid.http.service.AssessmentHttpService">
        <property name="serverAddress" value="${homework.serverAddress}"/>
    </bean>

    <bean id="fileHttpService" class="com.vipkid.http.service.FileHttpService">
        <property name="serverAddress" value="${teacherApp.serverAddress}"/>
        <property name="s3BucketName" value="${aws.bucketName}"/>


    </bean>
    
    <bean id="teacherAppService" class="com.vipkid.http.service.TeacherAppService">
        <property name="serverAddress" value="${teacherApp.serverAddress}"/>
    </bean>
    
    <bean id="payrollAppService" class="com.vipkid.http.service.PayrollService">
        <property name="serverAddress" value="${payrollApp.serverAddress}"/>
    </bean>

    <bean id="manageGatewayService" class="com.vipkid.http.service.ManageGatewayService">
        <property name="serverAddress" value="${gateway.serverAddress}"/>
    </bean>

    <bean id="scalperService" class="com.vipkid.http.service.ScalperService">
        <property name="serverAddress" value="${scalper.serverAddress}"/>
    </bean>
    
    <bean id="prizeService" class="com.vipkid.http.service.PrizeService">
    	<property name="serverAddress" value="${teacher.activity.serverAddress}"/>
    </bean>
    
    <bean id="onlineClassProxyService" class="com.vipkid.http.service.OnlineClassProxyService">
    	<property name="serverAddress" value="${api.classroom.server.url}" />
    </bean>
</beans>
