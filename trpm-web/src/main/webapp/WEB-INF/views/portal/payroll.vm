<div id="payroll"> 
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" #tabActive($payrollType, "SALARY")>
      <a href="javascript:;" id="salary">Salary</a>
    </li>
    <li role="presentation" #tabActive($payrollType, "PRICELIST")>
      <a href="javascript:;" id="priceList">Price list</a>
    </li>
    <li style ="float:right">
     <a  target = blank  href= "https://vipkid.freshdesk.com/solution/articles/9000048764-payroll-faqs" >
      Do you have any questions?   
     </a>
    </li>
  </ul>
 
  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active panel-body">
    #if($payrollType.equals("SALARY"))  
      #parse("/portal/payroll_salary.vm")
    #elseif($payrollType.equals("PRICELIST"))
      #parse("/portal/payroll_price.vm")
    #end
    </div>
  </div>
   <form id="payrollForm" style="display: none;" method="post" action="#springUrl('/payroll.shtml')">
    <input type="hidden" id="offsetOfMonth" name="offsetOfMonth" value="$!{offsetOfMonth}" />
    <input type="hidden" id="payrollType" name="payrollType" value="$!{payrollType}" />
    <input type="submit" />
  </form>
  

</div>

