<div class="modal fade" id="report-Modal" style="overflow:hidden;" role="dialog" aria-labelledby="reportModal">
	<style>   
		.report-dialog .default-button{background:#eee;color:red;border:1px solid #fff;margin-right:10px;}
		.report-dialog .modal-footer{border-top:0px;text-align:center;margin-top:0px;}
		.report-dialog .imgdiv{height:80px;line-height:80px;}
		.report-dialog{margin-top:15%;}
		.modal-body{padding-bottom: 50px; overflow: hidden;}
		.modalPopWaper .line-row{height: 40px; line-height: 40px;margin-bottom: 20px; position: relative;}
		.modalPopFooter{padding:0;position: absolute;left: 0;bottom: 0; width: 100%;}
		.modalPopFooter a{width: 50%;border-left:#eee 1px solid;border-top:#eee 1px solid; float:left;height: 50px; line-height: 50px;font-size: 18px; color: #555;}
		.modalPopFooter a.modalBtnCancel{border-radius: 0 0 0 4px;} 
		.modalPopFooter a.modalBtnOk{border-radius: 0 0 4px 0; color: #f00;}
		.modalPopFooter a:hover{background: #f5f5f5;color: #009fda;text-decoration: none;}
		.modalBtnCom{width: 120px; height: 40px; line-height: 40px;border:#ddd 1px solid;border-radius: 4px; color: #f00;display: block; float: left;margin-right: 10px; text-align: center;background: #f5f5f5; cursor:pointer;}
		a.modalBtnCom:hover{background: #eee;color: #f00;text-decoration: none;border:#ccc 1px solid;}
		.modalFormBtn{height: 40px; width: 120px; opacity: 0; position: absolute;left: 0;top: 0; cursor:pointer;}
		.file-title{height:30px;overflow:hidden;}
		.col-width{padding-left:0!important;padding-right:0!important;}
	</style>
	  
	<div  class="modal-dialog report-dialog" style="width:400px;margin-top:10%;">
		<div class="modal-content modalPopWaper">
			
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
				<h4 class="modal-title"> <strong>Mock Class Eval Report</strong> </h4>
			</div>
			
			<div id="upload" class="modal-body">
				<form class="form-horizontal" id="uploadReportForm" action="#springUrl('/uploadPracticumReport.json')" method="post" enctype="multipart/form-data">
					<div class="line-row"> 
						<a href="https://resource.vipkid.com.cn/teaching_resource/unitAssessment/$!{template.name}.docx" download="Template.docx" class="modalBtnCom">Download</a>
			            <span>$!{template.name}.docx</span>
			        </div>
					#if($mark)
						<div class="line-row">
							<input type="file" title="Attach File" name="file" class="modalFormBtn" id="uploadReport" accept=".docx"/>
							<a id="text-file" href="javascript:;" class="modalBtnCom">Attach File</a> 
							#if($uploadName)
								<div class="file-title" title="$!uploadName"><span>$!uploadName</span></div>
							#else
								<div class="file-title"><span>No file attached</span></div>
							#end 
						</div>
						
						##分数
						<div class="line-row">
							<div class="col-lg-7 col-width">Mock Class eval report score:</div>
							<div class="col-lg-3 col-width">
								<input id="onlineClassId" type="hidden" name="onlineClassId" value="$!onlineClass.id"/>
								<input id="score" type="text" class="form-control" name="score" value="$!bean.score"/>
								<div> 1 - 44 </div>
							</div>
						</div>
						<div class="modal-footer modalPopFooter"> 
							<a class="modalBtnCancel closebutton" href="javascript:;">Cancel</a> 
							#if($!{bean.readed} == 1) 
								<a class="modalBtnOk" id="uploadChangeReoprt" href="javascript:;">Send</a> 
							#else 
								<a class="modalBtnOk" id="uploadReportFormSubmit"  href="javascript:;">Send</a> 
							#end 
						</div>
					#end
			 	</form>
			</div>
	      
			<div id="successful" class="modal-body" style="display:none;padding-bottom: 25px;">
				<div style="text-align:center;">
			        <div class="msg"> </div>
					<div class="imgdiv"> <img alt="successful" src="#imageUrl('/resources/images/portal/successful.png')"/> </div>
					<input type="button" class="btn btn-primary closebutton" style="min-width:120px;" value="OK" />
		        </div>
			</div>
			
			<div id="failed" class="modal-body" style="display:none;padding-bottom: 25px;">
				<div style="text-align:center;">
					<div class="msg"></div>
					<div class="imgdiv"> <img alt="failed" src="#imageUrl('/resources/images/portal/failed.png')"/> </div>
					<input type="button" class="btn btn-primary" style="min-width:120px;" id="returnUpload" value="Whoops,try again! " />
				</div>
			</div>
	      
		</div>
	</div>
</div>