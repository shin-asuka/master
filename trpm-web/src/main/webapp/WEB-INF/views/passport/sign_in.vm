#set($layout = "/passport/layout.vm")
<section>
	<div class="content">
		<div class="contentsignin">
			<div class="teachersigninform">
				<div class="teacher-title"><h4>The VIPKID Teacher Portal</h4></div>
				<p class="titinfo">Email address</p>
				<p class="inptxt emailaddressinptxt">
					<i class="dxico error-username"><img src="#styleUrl('/resources/images/passport/errorico.png')"/></i>
					<i class="dxico pass-username"><img src="#styleUrl('/resources/images/passport/hook17ico.png')"/></i>
					<input type="text" id="username" name="username"/>
				</p>
				<p class="warnwords" id="warnwords-username"></p>
				
				<p class="titinfo">Password</p>
				<p class="inptxt passwordinptxt">
					<i class="dxico error-password"><img src="#styleUrl('/resources/images/passport/errorico.png')"/></i>
					<i class="dxico pass-password"><img src="#styleUrl('/resources/images/passport/hook17ico.png')"/></i>
					<input type="password" id="password" name="password"/>
				</p>
				<p class="warnwords" id="warnwords-password"></p>
				
				<p class="rememberpass"><label class="selbox"><i id="remember"></i>Remember Me</label> <a href="#springUrl('/resetPassword.shtml')" class="fp">Forget your password?</a></p>
				
				<p class="writeinfo locked">
					<span>
						<img src="#styleUrl('/resources/images/passport/yiico.png')"/>
						<strong class="signintitle">Account not verified!</strong><br/>
						Please click the link in your email to verify your account before signing in.
						Having trouble? Contact us! <a class="corf60" href="mailto:teachvip@vipkid.com.cn">teachvip@vipkid.com.cn</a>
					</span>
				</p>
				
				<p class="writeinfo quitinfo">
					<span>
						<img src="#styleUrl('/resources/images/passport/yiico.png')"/>
						<strong class="signintitle">Account locked!</strong><br/>
						Sorry, your account has been locked for security reasons.<br/>
						Having trouble? Contact us! <a class="corf60" href="mailto:teachvip@vipkid.com.cn">teachvip@vipkid.com.cn</a>
					</span>
				</p>
				
				<p class="writeinfo usererror">
					<span>
						<img src="#styleUrl('/resources/images/passport/yiico.png')"/>
						<strong class="signintitle">Account not found!</strong><br/>
						You can't login the system from here.<br/>
					</span>
				</p>
				
				<p class="writeinfo otherinfo">
					<span>
						<img src="#styleUrl('/resources/images/passport/yiico.png')"/>
						<strong class="signintitle">Email address or password incorrect!</strong><br/>
						Sorry, the email address or password you have entered is incorrect. If you continue to have problems signing in please email
						<a class="corf60" href="mailto:teachvip@vipkid.com.cn">teachvip@vipkid.com.cn</a>
					</span>
				</p>
				
				<p class="signinbtnpar"><button id="signinbtn" class="signinbtn">Sign In</button></p>
				<p class="already">No account yet? <a href="#springUrl('/signUp.shtml')" class="corblue">Sign Up</a> here.</p>
			</div>
	   </div>
	</div>
</section>

