#set($layout = "/passport/layout.vm")
<section>
  <div class="content">
    <div class="contentleft_right">
      <div class="contentleft">
        <div class="teacherforvipkid">
          <p class="bean">Be an English Teacher for <span>VIPKID!</span></p>
          <p class="f13"><span class="corf60 f15">VIPKID</span> is a fun and dynamic company providing the American</p>
          <p class="f13">Elementary School experience to Chinese children <span class="corf60">online</span>!</p>
        </div>
        <div class="whyjoin">
          <p class="f15 j3">Why join VIPKID?</p>
          <p>- Competitive salary. Earn up to <span class="corf60">USD 22/h</span>!</p>
          <p>- Convenience and flexibility of <span class="corf60">working from home</span></p>
          <p>- Training and development</p>
        </div>
        <div class="whyjoin">
          <p class="f15 j3">What Do We Require?</p>
          <p>- Classroom <span class="corf60">K12</span> experience in the US or Canada</p>
          <p>- A <span class="corf60">Bachelor's</span> degree</p>
          <p>- Available to teach <span class="corf60">7.5+ hours</span> a week</p>
        </div>
      </div>
      <div class="contentright">
        
        <div class="hoverpromptbox emailaddress">
          <p>Your email address will be used as your</p>
          <p>username to log into our system</p>
        </div>
        
        <div class="hoverpromptbox createpassword">
          <p>Your password must</p>
          <p id="password1" name="def-userpassword" class="epbgico">contain only alphanumeric characters</p>
          <p id="password2" name="def-userpassword" class="epbgico">be between 6-30 characters</p>
          <p id="password3" name="def-userpassword" class="epbgico">contain both letters and numbers</p>
        </div>
        
        <div class="teachersignupform">
          <p class="titinfo">Email address</p>
          <p class="inptxt emailaddressinptxt">
          	<i class="dxico error-email"><img src="#styleUrl('/resources/images/passport/errorico.png')"/></i>
          	<i class="dxico pass-email"><img src="#styleUrl('/resources/images/passport/hook17ico.png')"/></i>
            <input class="emailaddressinp email" type="text" id="email" name="email" maxlength="50" validator="{notnull:true,notnullMsg:'Please don\'t leave this blank!',pattern:'^(([a-zA-Z0-9\'_\-])\.+)+\@(([a-zA-Z0-9\-])+\.)+([a-zA-Z0-9]{2,4})+$',patternMsg:'Incorrect format!',maxlength:51}"/>
          </p>
          <p id="warnwords-email" class="warnwords"></p>
          
          <p class="titinfo">Create password</p>
          <p class="inptxt passwordinptxt">
          	<i class="dxico error-userpassword"><img src="#styleUrl('/resources/images/passport/errorico.png')"/></i>
          	<i class="dxico pass-userpassword"><img src="#styleUrl('/resources/images/passport/hook17ico.png')"/></i>
            <input class="password" type="password" id="userpassword" name="userpassword" maxlength="30" validator="{notnull:true,notnullMsg:'Please don\'t leave this blank!',lengths:'6-31',pattern:'^([a-zA-Z0-9])+$',contain:'^(?=.*[A-Z].*)(?=.*[0-9].*)|(?=.*[a-z].*)(?=.*[0-9].*).{0,}$'}"/>
          </p>
          <p id="warnwords-userpassword" class="warnwords"></p>
          
          <p class="titinfo">Retype password</p>
          <p class="inptxt retypepasswordinptxt">
          	<i class="dxico error-repassword"><img src="#styleUrl('/resources/images/passport/errorico.png')"/></i>
          	<i class="dxico pass-repassword"><img src="#styleUrl('/resources/images/passport/hook17ico.png')"/></i>
            <input type="password" id="repassword" name="repassword" maxlength="30" validator="{notnull:true,notnullMsg:'Please don\'t leave this blank!',equalTo:'userpassword',equalToMsg:'Passwords do not match!'}"/>
          </p>
          <p id="warnwords-repassword" class="warnwords"></p>
          <p class="already">By clicking Sign Up, you agree that you have read our <a href="#springUrl('/privacy.shtml')" target="_blank" class="corblue">Privacy policy</a>.</p>
          
          
	  	  <p class="writeinfo otherinfo">
			<span>
				<img src="#styleUrl('/resources/images/passport/yiico.png')"/>
				<strong class="signintitle">Email address incorrect!</strong><br/>
				Sorry, this email has already been registered
			</span>
		  </p> 
           
          <p class="signupbtnpar"><button id="signupbtn" class="signupbtn">Sign Up</button></p>
          <p class="already">Already have an account? <a href="#springUrl('/index.shtml')" class="corblue">Sign In</a> here</p>
        </div>
      </div>
    </div>
  </div>
</section>
