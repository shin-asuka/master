#set($layout = "/passport/layout.vm")
<style>
	.btn-warning{background:#f60;border:1px solid #b74900;}
	.btn-warning:hover{background:rgba(255,99,0,0.8);}
	.modal-footer{text-align:center;border-top:0px;padding:0px 10px 20px 10px;}
	.modal-header,.close{border-bottom:0px;display:none;}
	.modal-body{font-size:14px;padding:20px;}
	.teachersigninform .signinbtn{min-width:84px;width:auto;max-width:100px;}
</style>
<section>
	<div class="content">
		<div class="contentsignin">
			<div class="teachersigninform resetpasswordform">
				<p class="titinfo">Type your VIPKID registration email address</p>
				<p class="inptxt emailaddressinptxt">
					<i class="dxico error-username"><img src="#styleUrl('/resources/images/passport/errorico.png')"/></i>
					<i class="dxico pass-username"><img src="#styleUrl('/resources/images/passport/hook17ico.png')"/></i>
					<input type="text" class="emailaddressinp email" id="username" name="username" maxlength="50" validator="{pattern:'^(([a-zA-Z0-9\'_\-])\.+)+\@(([a-zA-Z0-9\-])+\.)+([a-zA-Z0-9]{2,4})+$',patternMsg:'Incorrect format!'}"/>
				</p>
				<p class="warnwords" id="warnwords-username"></p>

				<p class="writeinfo locked">
					<span>
						<img src="#styleUrl('/resources/images/passport/yiico.png')"/>
						<strong class="signintitle">Account not verified!</strong><br/>
						Please click the link in your email to verify your account before signing in.<br/>
						Having trouble? Contact us! <a class="corf60" href="mailto:teachvip@vipkid.com.cn">teachvip@vipkid.com.cn</a>
					</span>
				</p>
				
				<p class="writeinfo quitinfo">
					<span>
						<img src="#styleUrl('/resources/images/passport/yiico.png')"/>
						<strong class="signintitle">Account locked!</strong><br/>
						Sorry, your account has been locked for security reasons.<br/>
						Having trouble? Contact us! <a class="corf60" href="mailto:teachvip@vipkid.com.cn">teachvip@vipkid.com.cn</a>
					</span>
				</p>

				<p class="writeinfo otherinfo">
					<span>
						<img src="#styleUrl('/resources/images/passport/yiico.png')"/>
						<strong class="signintitle">Account not found!</strong><br/>
						Sorry, your account could not be found<br/>
						using the credentials you supplied. Please<br/>
						try again using a different email address.<br/>
					</span>
				</p>
				
				<p class="writeinfo usererror">
					<span>
						<img src="#styleUrl('/resources/images/passport/yiico.png')"/>
						<strong class="signintitle">Account not found!</strong><br/>
						You can't reset your password from here.<br/>
					</span>
				</p>
		
				<p class="signinbtnpar">
					<button id="signupbtn" class="signinbtn resetbtn">Reset</button>
                	<button id="disabledbtn" class="signinbtn tryagainbtn bgb9b" style="display:none;">30s</button>
				</p>
				<p class="already">Still having trouble? Contact us!</p>
				<p class="already"><a class="corblue" href="mailto:teachvip@vipkid.com.cn">teachvip@vipkid.com.cn</a></p>
			</div>	
	   </div>
	</div>
</section>

